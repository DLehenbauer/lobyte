{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "linterOptions": {
        "exclude": [
            "**/node_modules/**",
            "lib/*.d.ts" 
        ]
    },
    "jsRules": {},
    "rules": {
        "max-classes-per-file": false,
        "max-line-length": {
            "options": [160]
        },
        "no-bitwise": false,
        "quotemark": [true, "single", "avoid-escape", "avoid-template"],
        "trailing-comma": [
          true,
          {
            "multiline": {
              "objects": "always",
              "arrays": "always",
              "functions": "never",
              "typeLiterals": "ignore"
            },
            "esSpecCompliant": true
          }
        ],
      "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore"]
    },
    "rulesDirectory": []
}
